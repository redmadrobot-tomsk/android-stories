<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Draggable" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/dark</item>

        <item name="storyFrameTitleStyle">@style/StoryText.Title</item>
        <item name="storyFrameSubtitleStyle">@style/StoryText.Subtitle</item>
        <item name="storyFrameTextStyle">@style/StoryText</item>
        <item name="storyFrameFailTitleStyle">@style/StoryText.FailTitle</item>
        <item name="storyFrameFailSubtitleStyle">@style/StoryText.FailSubtitle</item>
        <item name="storyFrameActionButtonStyle">@style/StoryActionButton</item>
    </style>

    <style name="StoryText">
        <item name="android:textSize">17sp</item>
        <item name="android:lineSpacingExtra">5sp</item>
    </style>

    <style name="StoryText.Title">
        <item name="android:textSize">34sp</item>
        <item name="android:lineSpacingExtra">7sp</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="StoryText.Subtitle">
        <item name="android:textSize">23sp</item>
    </style>

    <style name="StoryText.Body">
        <item name="android:textSize">17sp</item>
        <item name="android:lineSpacingExtra">7sp</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="StoryText.FailTitle">
        <item name="android:textColor">#fff</item>
    </style>

    <style name="StoryText.FailSubtitle">
        <item name="android:textColor">#96a0aa</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="StoryActionButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@drawable/bg_story_action</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:backgroundTint">#cedc00</item>
        <item name="android:textColor">#000</item>
    </style>

    <declare-styleable name="DraggableView">
        <attr name="dragDismissDistance" format="dimension" />
        <attr name="dragDismissFraction" format="float" />
        <attr name="dragDismissScale" format="float" />
        <attr name="dragElasticity" format="float" />
        <attr name="dragUpEnabled" format="boolean" />
    </declare-styleable>
</resources>