<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textFailedTitle"
        style="@style/StoryText.FailTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stories_failed_title" />

    <TextView
        android:id="@+id/textFailedDescription"
        style="@style/StoryText.FailSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="@string/stories_failed_description" />

    <ImageView
        android:id="@+id/imgRefresh"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_refresh_story_frame"
        tools:ignore="ContentDescription" />

</LinearLayout>